/*
 * 公用样式
 */

.top_border {
  position: relative;
  border-top: 2vw solid #f4f4f4;
}

.top_border:after {
  content: " ";
  display: block;
  width: 100%;
  position: absolute;
  top: -2vw;
  right: 0;
  height: 1px;
  border-top: 1px solid #d9d9d9;
  color: #d9d9d9;
  -webkit-transform-origin: 0 0;
  transform-origin: 0 0;
  -webkit-transform: scaleY(0.5);
  transform: scaleY(0.5);
  z-index: 2;
}

.none {
  display: none !important;
}

.lineH_clear {
  line-height: 0;
}

.lineH_auto {
