/* 改变button默认样式 */

.formButton {
  border-radius: 0;
  background: #fff;
}

.formButton::after, .formButton::before {
  display: none;
  border: 0;
}

/* 滑动弹窗时，解决页面跟着滚动问题 */

.preventTouchMove {
  top: 0px;
  left: 0px;
  width: 100%;
  height: 100%;
  overflow: hidden;
  position: fixed;
  z-index: 0;
}

.defaultMask {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.5);
  z-index: 1000;
  box-sizing: border-box;
}
