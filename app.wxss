/*
 * 行样式
 */

.lineItem {
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  justify-content: space-between;
  padding: 2%;
  position: relative;
  background: #fff;
}

.lineItem.border::after {
  content: " ";
  display: block;
  width: 100%;
  position: absolute;
  bottom: -3rpx;
  right: 0;
  height: 1px;
  border-top: 1px solid #d9d9d9;
  color: #d9d9d9;
  -webkit-transform-origin: 0 0;
  transform-origin: 0 0;
  -webkit-transform: scaleY(0.5);
  transform: scaleY(0.5);
  z-index: 2;
}

.lineItem .left {
  text-align: center;
  display: flex;
  align-items: center;
}

.lineItem .twoLine {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.lineItem .left text.iconfont {
  margin-right: 20rpx;
}

.lineItem .center {
  flex: 1;
  margin-right: auto;
  text-align: left;
  display: flex;
  flex-direction: column;
  justify-content: center;
  flex-wrap: wrap;
}

.lineItem .right {
  margin-left: auto;
  text-align: right;
  display: flex;
  flex-direction: column;
  justify-content: center;
  position: relative;
}

.lineItem_access .right {
  padding-right: 28rpx;
}

.lineItem_access .right::after {
  content: " ";
  display: inline-block;
  height: 6px;
  width: 6px;
  border-width: 2px 2px 0 0;
  border-color: #c8c8cd;
  border-style: solid;
  -webkit-transform: matrix(0.71, 0.71, -.71, 0.71, 0, 0);
  transform: matrix(0.71, 0.71, -.71, 0.71, 0, 0);
  position: absolute;
  top: 50%;
  margin-top: -4px;
  right: 2px;
}

