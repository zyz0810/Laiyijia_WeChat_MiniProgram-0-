/* pages/shelf/replenish/detail.wxss */

page {
  padding-bottom: 100rpx;
}

.table {
  border-left: 1rpx solid darkgray;
  border-top: 1rpx solid darkgray;
}

.tr {
  display: flex;
  width: 100%;
  justify-content: center;
  align-items: stretch;
  background: #fff;
  border-bottom: 1rpx solid darkgray;
}

.tr input {
  border-bottom: 1rpx solid #999;
  width: 60%;
}

.td {
  width: 40%;
  justify-content: center;
  text-align: center;
  border-right: 1rpx solid darkgray;
  display: flex;
  align-items: center;
  padding: 10rpx 5rpx;
  word-break: break-all;
}

.bg-w {
  background: #fff;
}

.th {
  width: 40%;
  justify-content: center;
  background: #fff;
  color: #000;
  display: flex;
  align-items: center;
  height: 60rpx;
  border-right: 1rpx solid darkgray;
  padding: 0 5rpx;
}

textarea {
  width: 96%;
  padding: 2%;
  height: 150rpx;
  background: #f2f2f2;
  border: 1px solid #f2f2f2;
}

.line {
  width: 100%;
  height: 1px;
  background: #d1d1d1;
  margin: 30rpx 0;
}

.flex {
  padding: 10rpx 0;
}

.logistics {
  color: darkblue;
  border-bottom: 1rpx solid darkblue;
}

.optBtn {
  background: #ff6d06;
  width: 70%;
  margin: 30rpx auto;
  border-radius: 5rpx;
}
