  margin: 30rpx auto;
  border-radius: 10rpx;
  box-shadow: 0 0 10rpx #ccc;
  box-sizing: border-box;
}

.brandLogo {
  width: 150rpx;
  height: 150rpx;
  margin-right: 4%;
  border-radius: 50%;
}

