/* pages/shop/change/index.wxss */

.lineItem {
  padding: 4%;
}

.circle {
  border: 1px solid #ccc;
  border-radius: 50%;
  height: 80rpx;
  width: 80rpx;
  line-height: 80rpx;
  margin-right: 20rpx;
}

.circle .iconfont {
  margin: 0 !important;
}
.add{
  width: 100rpx;
  height: 100rpx;
  line-height: 90rpx;
  background: #FEC965;
  position: fixed;
  bottom: 60rpx;
  right: 50rpx;
  z-index: 99;
  border-radius: 50%;
}

.circle image {
  width: 11vw;
  height: 11vw;
  border-radius: 50%;
}

movable-area {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 99;
  pointer-events: none;
}

movable-view {
  width: 100rpx;
  height: 100rpx;
  line-height: 90rpx;
  background: #fec965;
  z-index: 9999;
  position: relative;
  border-radius: 50%;
  pointer-events: auto;
}
