/* pages/rank/list/index.wxss */
.top_bg{
  width: 100%;
  height: 400rpx;
}
.top_bg image{
  width: 100%;
  height: 100%;
}
.my_info{
  box-sizing: border-box;
  width: 96%;
  padding: 10px;
  margin: -200rpx auto 0;
  border-radius: 10rpx;
  background: #fff;
  position: relative;
  z-index: 12;
  box-shadow: 0 0 5px #ccc;
}
.headImg{
  margin-right: 2%;
}
.headImg image{
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
}
.num{
  line-height: 1.8;
  padding: 2%;
  margin-top: 10rpx;
}
.intro{
  line-height: 2;
}

.list{
  margin-top: 30rpx;
}
.list .lineItem{
  padding: 4%;
  margin-bottom: 2%
}
.list .lineItem .left{
  padding-right: 20rpx;
  margin-right: 20rpx;
  position: relative;
}

.list .lineItem .left:after{
  content: " ";
  position: absolute;
  right: 0;
  top: 25%;
  width: 1px;
  height: 50%;
  bottom: 0;
  border-right: 3px solid #EDEDF4;
  color: #EDEDF4;
  -webkit-transform-origin: 100% 0;
  transform-origin: 100% 0;
  -webkit-transform: scaleX(0.5);
  transform: scaleX(0.5);
}