/* pages/index/index.wxss */

page {
  background: #fff;
}

.top {
  height: 580rpx;
  margin-bottom: 50rpx;
  background: #fec965;
}

.info {
  line-height: 1.5;
  background: transparent;
  padding: 0 2%;
}

.rank_tan {
  background: #000;
  padding: 8rpx 5rpx;
  border-radius: 10rpx;
}

.tab .flex-item {
  padding: 0 2%;
  /* line-height: 2; */
}

.tab .flex-item>text {
  line-height: 2;
  display: inline-block;
}

.tab .flex-item.active>text {
  color: #a8938e;
  padding: 0 20rpx;
  background: #f5f5ac;
  border-radius: 10rpx;
}

.trade_num {
  position: relative;
}

.trade_num>view:nth-child(1), .rank_num>view:nth-child(1) {
  margin-bottom: 8rpx;
}

/* .rank_num>view:last-child{
  padding-left:24px;
} */

.trade_num::after {
  content: " ";
  position: absolute;
  right: 0;
  top: 20%;
  width: 1px;
  height: 60%;
  bottom: 0;
  border-right: 2px solid #fff;
  color: #fff;
  -webkit-transform-origin: 100% 0;
  transform-origin: 100% 0;
  -webkit-transform: scaleX(0.5);
  transform: scaleX(0.5);
}

.moneyTotal {
  line-height: 2.2;
}

.money {
  padding: 2%;
}

.money .flex-item {
  padding: 1% 2% 30rpx;
  margin: 20rpx 2%;
  background: #fff;
  border-radius: 10rpx;
  box-shadow: 0 0 5px #ccc;
}

.name {
  line-height: 1;
  margin-bottom: 20rpx;
}

.menu {
  padding: 0 4%;
}

.menu .flex-item {
  line-height: 3;
  border-radius: 10rpx;
  box-shadow: 0 0 5px #666;
}

.menu .flex-item:nth-child(1) {
  background: #7b8ffc;
}

.menu .flex-item:nth-child(2) {
  background: #a3c67f;
  margin: 0 2%;
}

.menu .flex-item:nth-child(3) {
  background: #fec965;
}

.jackpot image {
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
}

.rankTit {
  padding: 4% 2%;
  margin: 2% 0 1%;
  border-top: 1px solid #f9f9f9;
  border-bottom: 1px solid #f9f9f9;
}

.rankTit .lineItem {
  padding: 0;
}

.rankTit .lineItem:nth-child(3) {
  padding-left: 28rpx;
  margin-top: 15rpx;
}

.rankTitle {
  padding-left: 20rpx;
  border-left: 8rpx solid #fec965;
}

.table_normal {
  padding: 1% 2% 2%;
  border: 0px solid darkgray;
  padding-bottom: 60rpx;
}

.table_normal .tab_tr {
  display: flex;
  width: 100%;
  justify-content: flex-start;
  align-items: flex-start;
}

.table_normal .td {
  width: 20%;
  justify-content: flex-start;
  text-align: flex-start;
  /* flex: 1; */
  padding: 2% 0 2% 2%;
  box-sizing: border-box;
}

.table_normal .bg-w {
  color: #666;
}

.table_normal .th {
  width: 20%;
  justify-content: flex-start;
  display: flex;
  height: 1.5rem;
  align-items: flex-start;
  padding: 0 0 0 2%;
  box-sizing: border-box;
}

.tab_tr .rank {
  position: relative;
}

.tab_tr .rankChange image {
  width: 10rpx;
  height: 16rpx;
  position: relative;
  margin-right: 4rpx;
}

.txt {
  margin: 0 30rpx 0 10rpx !important;
}

.purse {
  position: absolute;
  top: 180rpx;
  right: 0;
  display: inline-block;
  color: #f9deac;
  padding: 10rpx 45rpx;
  background: rgba(0, 0, 0, 0.5);
  border-top-left-radius: 30rpx;
  border-bottom-left-radius: 30rpx;
}

.mask {
  background: rgba(0, 0, 0, 0.5);
  position: fixed;
  width: 100%;
  height: 100%;
  left: 0;
  top: 0;
  z-index: 9999;
}

.nav {
  position: fixed;
  top: 0;
  right: 0;
  z-index: 10000;
  /* width: 350rpx; */
  width: 380rpx;
  height: 100%;
  background: #fff;
  transform: translate(100%, 0);
  transition: transform 0.3s;
}

.nav_toggle {
  transform: translate(0, 0);
}

.headImg {
  width: 160rpx;
  height: 160rpx;
  margin: 50rpx auto 10rpx;
  border-radius: 50%;
  /* box-shadow: 3px 3px 5px #999; */
}

/* .headImg {
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
  margin-right: 10rpx;
} */

.headImg .image {
  width: 100%;
  height: 100%;
  display: block;
  border-radius: 50%;
}

.userName {
  margin-bottom: 10rpx;
}

.nav_item {
  width: 90%;
  padding: 30rpx 0;
  margin: 30rpx auto 0;
  background: #fec965;
  box-shadow: 0 0 3rpx #999;
  border-radius: 10rpx;
}

.signOut {
  position: absolute;
  left: 5%;
  bottom: 50rpx;
  background: #7b8ffc;
}

.bg_red {
  background: #e01728;
}

@keyframes fadenum {
  /*设置内容由显示变为隐藏*/

  0% {
    opacity: 1;
  }

  50% {
    opacity: 0;
  }

  100% {
    opacity: 1;
  }
}

.rank_tan {
  animation: fadenum 5s infinite;
}

.rank_num .iconfont {
  margin-left: 10rpx;
}

.ad {
  padding: 30rpx 0 0;
  position: relative;
}

.ad image {
  width: 100%;
  height: 400rpx;
}

.goCreate {
  width: 90%;
  padding: 20rpx 0;
  margin: 0 auto;
  background: #fec965;
  border-radius: 20px;
  position: absolute;
  bottom: 40rpx;
  left: 5%;
  z-index: 8;
}

.more {
  padding: 30rpx 0;
  margin-bottom: 10rpx;
  border-bottom: 1rpx solid #fbfbfb;
}

.selfRank {
  position: fixed;
  bottom: 0;
  /* bottom: 60px; */
  left: 0;
  width: 100%;
  padding: 0 2%;
  background: #fff;
  box-sizing: border-box;
  background: #fff0e9;
}

.crown {
  position: absolute;
  top: 1px;
  left: -2px;
}

.suspenShelf {
  position: fixed;
  bottom: 40rpx;
  right: 4%;
  width: 150rpx;
  height: 150rpx;
  z-index: 999;
}

.suspenShelf image {
  width: 100%;
  height: 100%;
}

movable-area {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 99;
  pointer-events: none;
}

movable-view {
  width: 150rpx;
  height: 150rpx;
  line-height: 150rpx;
  z-index: 9999;
  position: relative;
  border-radius: 50%;
  pointer-events: auto;
}

movable-view image {
  width: 150rpx;
  height: 150rpx;
}

.formButton {
  background: transparent;
  width: 150rpx;
  padding: 0;
  margin: 0;
}

.shareTenantAction {
  position: fixed;
  bottom: 0;
  width: 100%;
  /* background: #fff; */
  z-index: 10002;
  padding: 0 0 60rpx 0;
  /* border-top-left-radius: 20rpx; *//* border-top-right-radius: 20rpx; */
  height: 134rpx;
}

.timeStapFlex {
  margin: 20rpx 0 0;
}

.timeStap view {
  display: inline-block;
}

.shop_state {
  padding: 0 20rpx;
  border-radius: 20rpx;
  background: red;
  display: inline-block;
}

.person_info {
  margin: 15rpx 0 30rpx;
}

.customer {
  position: absolute;
  left: 5%;
  bottom: 200rpx;
  line-height: 1.8;
}

.customer .lineItem {
  padding: 0;
}

.customer .lineItem .left text.iconfont {
  margin-right: 10rpx;
}

.brand_logo {
  width: 70rpx;
  height: 70rpx;
  margin-right: 30rpx;
  opacity: 0.5;
}

.brand_logo.active {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  opacity: 1;
}

.brand_logo image {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

.brand_list {
  flex-direction: row !important;
  justify-content: flex-start !important;
}

.noRank image {
  width: 250rpx;
  height: 250rpx;
  opacity: 0.4;
}

.activity_nanjiren {
  width: 593rpx;
  position: fixed;
  top: 100rpx;
  left: 78rpx;
  z-index: 99999;
  /* -webkit-transform: translate(-50%, -50%);
  -moz-transform: translate(-50%, -50%);
  transform: translate(-50%, -50%); */
}
.activity_nanjiren image{
  width: 100%;
  height: 787rpx;
  margin-bottom: 30rpx;
}