/* pages/order/list/index.wxss */

page {
  height: 100%;
  overflow: hidden;
  background: #fff;
}

.tapWrapp {
  /* top: 64px; *//* position: fixed; */
  width: 100%;
  height: 34px;
  padding: 3px 0;
}

.num {
  height: 160rpx;
  border-bottom: 20rpx solid #f7f6f6;
  /* position: fixed; *//* top: 0; *//* left: 0; */
  width: 100%;
  z-index: 100;
}

.num .flex-item {
  padding: 2%;
}

.num .flex-item>view {
  line-height: 2;
}

.border {
  width: 16%;
  height: 5px;
  border-radius: 20rpx;
  margin: 0 auto;
}

swiper {
  width: 100%;
  height: 100%;
}

swiper-item {
  overflow-y: auto;
}

.swiper-box {
  display: block;
  height: 100%;
  width: 100%;
  /* padding-top: 70px; *//* margin-top: 133px; */
}

.swiper-tab {
  width: 100%;
  text-align: center;
  line-height: 80rpx;
  /* position: absolute; *//* top: 0; */
  z-index: 1;
}

.on {
  color: #5e3c20;
}

.on::after {
  display: block;
  position: absolute;
  width: 60%;
  left: 20%;
  content: '';
  height: 2px;
  background: #5e3c20;
}

.detailsLineHide {
  display: none;
}

.top {
  /* position: fixed; *//* top: 123px; */
  display: flex;
  justify-content: space-around;
  background: #fff;
  line-height: 40px;
  height: 45px;
}

.top>view {
  width: 100%;
  text-align: center;
  position: relative;
}

scroll-view {
  height: 100%;
}

scroll-view .ordersWrap:last-child {
  margin-bottom: 50px;
}

.tips {
  margin: 0;
  /* padding-top: 5px; */
}

.ordersWrap {
  background: #fff;
  padding-bottom: 20rpx;
  position: relative;
  padding-top: 30rpx;
  border-bottom: 1px solid #f1f1f1;
}

.ordersWrap .flexC {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  padding: 2%;
}

.order_num {
  display: block !important;
  width: 180px;
  padding: 0;
  box-shadow: 0 0 5px #ccc;
  border-radius: 3px;
  background: #fff;
  position: absolute;
  bottom: 40px;
  left: 10px;
  z-index: 999;
  /* background: red; */
}

.title, .details, .orderTotal {
  position: relative;
}

.details {
  align-items: stretch !important;
}

.detailsLineMore {
  padding: 2%;
  background: #fff;
}

.detailsLineMore .orderImg {
  display: inline-block;
  width: 31vw;
  height: 31vw;
  margin-right: 1vw;
  position: relative;
}

.detailsLineMore .orderImg .productCount {
  position: absolute;
  left: 0;
  bottom: 0;
  background: #565656;
  width: 40rpx;
  height: 40rpx;
  color: #fff;
  text-align: center;
  line-height: 40rpx;
  border-top-right-radius: 10rpx;
  border-bottom-left-radius: 10rpx;
  opacity: 0.8;
}

.detailsLineMore .orderImg image {
  display: block;
  width: 100%;
  height: 100%;
}

.title image {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
}

.title .name {
  margin-right: auto;
  margin-left: 30rpx;
}

.orderImg image {
  width: 200rpx;
  height: 200rpx;
}

.shopName {
  width: 420rpx;
}

.shopInfo {
  display: flex;
  flex: 1;
  flex-direction: column;
  align-items: flex-start;
  justify-content: space-between;
  padding: 20rpx 0 20rpx 20rpx;
}

.shopNumber {
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.orderTotal {
  justify-content: flex-end !important;
}

.orderTotal>view {
  margin-left: 30rpx;
}

.method {
  justify-content: flex-end !important;
  min-height: 0;
  padding: 0 20rpx !important;
}

.method::after {
  display: none;
}

.method>view {
  margin: 20rpx 0 20rpx 30rpx;
  border: 1px solid #d9d9d9;
  line-height: 1.6;
  border-radius: 10rpx;
  padding: 6rpx 40rpx;
}

.scrollWrap {
  width: 100%;
  height: 100%;
  overflow-y: scroll;
  -webkit-overflow-scrolling: touch;
}

.technical_support.static {
  position: static;
}

.confirmBtn {
  background: #d9141e;
  color: #fff;
  border: 1px solid #d9141e !important;
}

.order_null {
  width: 312rpx;
  height: 364rpx;
  padding-top: 20%;
  margin: 0 auto 20%;
}

.order_null image {
  width: 100%;
  height: 100%;
}

.intro  .left {
  position: relative;
  padding-right: 20px;
}

.intro .iconfont {
  position: absolute;
  top: 0px;
  right: 5px;
  margin-right: 0 !important;
}

/* 佣金明细表格样式 */

.tableWrap {
  position: fixed;
  top: 200rpx;
  width: 650rpx;
  left: 35rpx;
  background: #fff;
  border: 1px solid #f1f1f1;
  padding: 2%;
  border-radius: 10rpx;
  z-index: 1001;
}

.tableWrap>view {
  margin-bottom: 20rpx;
}

.tableWrap .closeBtn text {
  display: inline-block;
  background: lightblue;
  padding: 15rpx 40rpx;
  color: #fff;
  border-radius: 10rpx;
}

/* 底部销售明细信息 */

.bottomSaleInfo {
  position: fixed;
  bottom: 0;
  width: 100%;
  background: #000;
  color: #fff;
  /* padding: 15rpx 0; */
  height: 30px;
  line-height: 30px;
}

.defaultMask {
  background: rgba(0, 0, 0, 0.7);
}
