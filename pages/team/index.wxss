/* pages/team/index.wxss */

page {
  background: #fff;
}

.top {
  padding: 50rpx 4%;
  border-bottom: 20rpx solid #f4f4f4;
}

.tab .flex {
  width: 60%;
  border: 1rpx solid #000;
  border-radius: 10rpx;
}

.tab .flex .flex-item {
  line-height: 2;
}

.tab .flex .flex-item:nth-child(1), .tab .flex .flex-item:nth-child(2) {
  border-right: 1rpx solid #000;
}

.tab .flex .flex-item:nth-child(1) {
  border-top-left-radius: 10rpx;
  border-bottom-left-radius: 10rpx;
}

.tab .flex .flex-item:nth-child(3) {
  border-top-right-radius: 10rpx;
  border-bottom-right-radius: 10rpx;
}

.screen {
  width: 15%;
  line-height: 2;
  border: 1rpx solid #000;
  border-radius: 10rpx;
}

.active {
  background: #fec965;
}

.middle {
  margin: 50rpx 0;
}

.middle .flex-item:nth-child(1), .middle .flex-item:nth-child(2) {
  box-shadow: 0 0 5rpx #ccc;
  border-radius: 10rpx;
}

.num {
  line-height: 3;
}

.middle .flex-item:nth-child(2) {
  margin: 0 0 0 10rpx;
}

.middle .flex-item:nth-child(1) .top_bg, .middle .flex-item:nth-child(2) .top_bg {
  position: relative;
  border-top-left-radius: 10rpx;
  border-top-right-radius: 10rpx;
  padding: 5rpx 0 5rpx 10px;
}

.middle .flex-item:nth-child(1) .top_bg {
  background: #909ee7;
  padding-left: 20px;
}

.middle .flex-item:nth-child(1) .iconfont,
.middle .flex-item:nth-child(2) .iconfont {
  position: absolute;
  left: 20px;
  top: 1px;
}

.middle .flex-item:nth-child(1) .iconfont {
  left: 15px;
}

.middle .flex-item:nth-child(2) .top_bg {
  background: #a3c67f;
}

.middle .flex-item:nth-child(3) {
  padding: 20rpx 0 0;
  line-height: 1;
}

.middle .flex-item:nth-child(3) .iconfont {
  color: #fd6a72;
}

.list .lineItem {
  padding: 4% 6%;
}

.list .lineItem .left {
  margin-right: 20rpx;
}

.list .lineItem .left image {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
}


.table_normal {
  padding: 1% 2% 2%;
  border: 0px solid darkgray;
  padding-bottom: 60rpx;
}

.table_normal .tab_tr {
  display: flex;
  width: 100%;
  justify-content: flex-start;
  align-items: flex-start;
  border-radius: 20rpx;
  padding: 0 2%;
  box-sizing: border-box;
  margin-bottom: 10rpx;
}

.table_normal .td {
  width: 20%;
  justify-content: flex-start;
  text-align: flex-start;
  /* flex: 1; */
  padding: 2% 0 2% 2%;
  box-sizing: border-box;
}

.table_normal .bg-w {
  color: #666;
}

.table_normal .th {
  width: 25%;
  justify-content: flex-start;
  display: flex;
  height: 2;
  line-height: 2;
  align-items: flex-start;
  padding: 0 1%;
  box-sizing: border-box;
}
.bg-gray{
  background: #f5f5f5;
}